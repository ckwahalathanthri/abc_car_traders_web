@model ABCCarTraders.Models.ViewModels.CarCategoryViewModel
@{
    ViewData["Title"] = $"{Model.CategoryName} Cars";
    ViewData["CategoryName"] = Model.CategoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
@await Html.PartialAsync("_BreadcrumbNavigation")

<!-- Category Header -->
<div class="category-header bg-gradient-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="fas fa-@GetCategoryIcon(Model.CategoryName) me-3"></i>@Model.CategoryName Cars
                </h1>
                <p class="lead mb-0">@GetCategoryDescription(Model.CategoryName)</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="category-stats text-white">
                    <div class="mb-2">
                        <div class="h3 fw-bold mb-0">@Model.TotalCarsInCategory</div>
                        <div>@Model.CategoryName.ToLower() available</div>
                    </div>
                    <div class="small">
                        <i class="fas fa-check-circle me-1"></i>
                        Quality verified vehicles
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Category Features -->
<div class="container mb-5">
    <div class="category-features">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fa-2x text-primary"></i>
                    </div>
                    <h6 class="fw-bold">Quality Assured</h6>
                    <p class="text-muted small mb-0">All vehicles thoroughly inspected</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-money-check-alt fa-2x text-success"></i>
                    </div>
                    <h6 class="fw-bold">Best Prices</h6>
                    <p class="text-muted small mb-0">Competitive pricing guaranteed</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-tools fa-2x text-warning"></i>
                    </div>
                    <h6 class="fw-bold">Service Support</h6>
                    <p class="text-muted small mb-0">Complete after-sales service</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-truck fa-2x text-info"></i>
                    </div>
                    <h6 class="fw-bold">Delivery</h6>
                    <p class="text-muted small mb-0">Island-wide delivery available</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters and Content -->
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="filters-sidebar">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-filter me-2"></i>Filter @Model.CategoryName
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <form asp-action="Category" asp-route-id="@Model.CategoryId" method="get" id="categoryFilterForm">
                            
                            <!-- Price Range -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-dollar-sign me-2 text-success"></i>Price Range
                                </label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <input type="number" name="minPrice" class="form-control form-control-sm" 
                                               placeholder="Min" value="@ViewData["MinPrice"]" />
                                    </div>
                                    <div class="col-6">
                                        <input type="number" name="maxPrice" class="form-control form-control-sm" 
                                               placeholder="Max" value="@ViewData["MaxPrice"]" />
                                    </div>
                                </div>
                                <div class="price-slider mt-3">
                                    <div class="range-labels d-flex justify-content-between small text-muted">
                                        <span>$10K</span>
                                        <span>$100K+</span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Brand -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-star me-2 text-warning"></i>Brand
                                </label>
                                <div class="brand-checkboxes">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="toyota" id="toyota">
                                        <label class="form-check-label" for="toyota">Toyota</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="honda" id="honda">
                                        <label class="form-check-label" for="honda">Honda</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="bmw" id="bmw">
                                        <label class="form-check-label" for="bmw">BMW</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="mercedes" id="mercedes">
                                        <label class="form-check-label" for="mercedes">Mercedes-Benz</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="audi" id="audi">
                                        <label class="form-check-label" for="audi">Audi</label>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Year Range -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-calendar me-2 text-secondary"></i>Year
                                </label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <select name="minYear" class="form-select form-select-sm">
                                            <option value="">Min Year</option>
                                            @for (int year = DateTime.Now.Year; year >= 2000; year--)
                                            {
                                                <option value="@year">@year</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <select name="maxYear" class="form-select form-select-sm">
                                            <option value="">Max Year</option>
                                            @for (int year = DateTime.Now.Year; year >= 2000; year--)
                                            {
                                                <option value="@year">@year</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Fuel Type -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-gas-pump me-2 text-danger"></i>Fuel Type
                                </label>
                                <div class="fuel-type-buttons">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="fuelType" value="petrol" id="fuelPetrol">
                                            <label class="btn btn-outline-secondary btn-sm w-100" for="fuelPetrol">Petrol</label>
                                        </div>
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="fuelType" value="diesel" id="fuelDiesel">
                                            <label class="btn btn-outline-secondary btn-sm w-100" for="fuelDiesel">Diesel</label>
                                        </div>
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="fuelType" value="hybrid" id="fuelHybrid">
                                            <label class="btn btn-outline-secondary btn-sm w-100" for="fuelHybrid">Hybrid</label>
                                        </div>
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="fuelType" value="electric" id="fuelElectric">
                                            <label class="btn btn-outline-secondary btn-sm w-100" for="fuelElectric">Electric</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Transmission -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-cogs me-2 text-dark"></i>Transmission
                                </label>
                                <div class="transmission-buttons">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="transmission" value="automatic" id="transAuto">
                                            <label class="btn btn-outline-secondary btn-sm w-100" for="transAuto">Automatic</label>
                                        </div>
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="transmission" value="manual" id="transManual">
                                            <label class="btn btn-outline-secondary btn-sm w-100" for="transManual">Manual</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Mileage -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-tachometer-alt me-2 text-info"></i>Mileage (km)
                                </label>
                                <div class="mileage-options">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="mileage" value="0-50000" id="mileage1">
                                        <label class="form-check-label" for="mileage1">Under 50,000 km</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="mileage" value="50000-100000" id="mileage2">
                                        <label class="form-check-label" for="mileage2">50,000 - 100,000 km</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="mileage" value="100000-200000" id="mileage3">
                                        <label class="form-check-label" for="mileage3">100,000 - 200,000 km</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="mileage" value="200000+" id="mileage4">
                                        <label class="form-check-label" for="mileage4">Over 200,000 km</label>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Filter Actions -->
                            <div class="filter-actions p-3">
                                <button type="submit" class="btn btn-primary w-100 mb-2">
                                    <i class="fas fa-search me-2"></i>Apply Filters
                                </button>
                                <a href="@Url.Action("Category", new { id = Model.CategoryId })" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-refresh me-2"></i>Clear Filters
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <!-- Results Header -->
            <div class="results-header mb-4">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div class="results-info mb-2">
                        <h4 class="mb-0">
                            @Model.Cars.Count of @Model.TotalCarsInCategory @Model.CategoryName.ToLower()
                        </h4>
                        <p class="text-muted mb-0">Showing all available @Model.CategoryName.ToLower() in our inventory</p>
                    </div>
                    
                    <div class="d-flex gap-2 align-items-center mb-2">
                        <!-- View Toggle -->
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary btn-sm active" 
                                    onclick="toggleView('grid')" id="gridViewBtn">
                                <i class="fas fa-th"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" 
                                    onclick="toggleView('list')" id="listViewBtn">
                                <i class="fas fa-list"></i>
                            </button>
                        </div>
                        
                        <!-- Sort Options -->
                        <select class="form-select form-select-sm" style="width: auto;" onchange="sortCars(this.value)">
                            <option value="">Sort By</option>
                            <option value="price_asc">Price: Low to High</option>
                            <option value="price_desc">Price: High to Low</option>
                            <option value="year_desc">Year: Newest First</option>
                            <option value="year_asc">Year: Oldest First</option>
                            <option value="mileage_asc">Mileage: Low to High</option>
                            <option value="brand_asc">Brand: A to Z</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Cars Grid -->
            @if (Model.Cars?.Any() == true)
            {
                <div id="carsContainer">
                    <div class="cars-grid" id="gridContainer">
                        <div class="row g-4">
                            @foreach (var car in Model.Cars)
                            {
                                <div class="col-xl-4 col-lg-6">
                                    <div class="car-card card h-100 border-0 shadow-sm">
                                        <div class="position-relative">
                                            <img src="@(car.ImageUrl ?? "/images/placeholder-car.jpg")" 
                                                 class="card-img-top car-image" alt="@car.BrandName @car.Model">
                                            
                                            <!-- Year Badge -->
                                            <span class="badge bg-primary position-absolute top-0 start-0 m-2">
                                                @car.Year
                                            </span>
                                            
                                            <!-- Stock Status -->
                                            @if (car.StockQuantity == 0)
                                            {
                                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                                    Out of Stock
                                                </span>
                                            }
                                            else if (car.StockQuantity <= 3)
                                            {
                                                <span class="badge bg-warning position-absolute top-0 end-0 m-2">
                                                    Low Stock
                                                </span>
                                            }
                                            
                                            <!-- Quick Actions -->
                                            <div class="car-actions position-absolute bottom-0 end-0 m-2 d-none">
                                                <div class="btn-group-vertical" role="group">
                                                    <button type="button" class="btn btn-light btn-sm" 
                                                            onclick="addToWishlist(@car.CarId)" title="Add to Wishlist">
                                                        <i class="fas fa-heart"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-light btn-sm" 
                                                            onclick="addToCompare(@car.CarId)" title="Compare">
                                                        <i class="fas fa-balance-scale"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="card-body">
                                            <div class="car-header mb-2">
                                                <h5 class="card-title mb-1">@car.BrandName @car.Model</h5>
                                                <span class="badge bg-light text-dark">@car.CategoryName</span>
                                            </div>
                                            
                                            <div class="car-details mb-3">
                                                <div class="row g-2 text-muted small">
                                                    <div class="col-6">
                                                        <i class="fas fa-gas-pump me-1"></i>@car.FuelType
                                                    </div>
                                                    <div class="col-6">
                                                        <i class="fas fa-cogs me-1"></i>@car.Transmission
                                                    </div>
                                                    @if (car.Mileage.HasValue)
                                                    {
                                                        <div class="col-6">
                                                            <i class="fas fa-tachometer-alt me-1"></i>@car.Mileage.Value.ToString("N0") km
                                                        </div>
                                                    }
                                                    @if (!string.IsNullOrEmpty(car.Color))
                                                    {
                                                        <div class="col-6">
                                                            <i class="fas fa-palette me-1"></i>@car.Color
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            
                                            <div class="car-price mb-3">
                                                <h4 class="text-success fw-bold mb-0">@car.FormattedPrice</h4>
                                            </div>
                                            
                                            <div class="car-actions">
                                                <div class="row g-2">
                                                    <div class="col-8">
                                                        <a href="@Url.Action("Details", new { id = car.CarId })" 
                                                           class="btn btn-primary w-100">
                                                            <i class="fas fa-eye me-1"></i>View Details
                                                        </a>
                                                    </div>
                                                    <div class="col-4">
                                                        @if (car.IsAvailable && car.StockQuantity > 0)
                                                        {
                                                            <button type="button" class="btn btn-outline-success w-100" 
                                                                    onclick="addToCart(@car.CarId)" title="Add to Cart">
                                                                <i class="fas fa-cart-plus"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-secondary w-100" disabled>
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- List View (Hidden by default) -->
                    <div class="cars-list d-none" id="listContainer">
                        @foreach (var car in Model.Cars)
                        {
                            <div class="car-list-item card mb-3 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <img src="@(car.ImageUrl ?? "/images/placeholder-car.jpg")" 
                                                 class="img-fluid rounded" alt="@car.BrandName @car.Model"
                                                 style="height: 120px; object-fit: cover;">
                                        </div>
                                        <div class="col-md-6">
                                            <h5 class="fw-bold">@car.BrandName @car.Model</h5>
                                            <div class="car-specs mb-2">
                                                <span class="badge bg-primary me-1">@car.Year</span>
                                                <span class="badge bg-light text-dark me-1">@car.CategoryName</span>
                                                <span class="badge bg-secondary me-1">@car.FuelType</span>
                                                <span class="badge bg-info text-white">@car.Transmission</span>
                                            </div>
                                            <div class="car-features text-muted small">
                                                @if (car.Mileage.HasValue)
                                                {
                                                    <span class="me-3"><i class="fas fa-tachometer-alt me-1"></i>@car.Mileage.Value.ToString("N0") km</span>
                                                }
                                                @if (!string.IsNullOrEmpty(car.Color))
                                                {
                                                    <span class="me-3"><i class="fas fa-palette me-1"></i>@car.Color</span>
                                                }
                                                @if (!string.IsNullOrEmpty(car.EngineCapacity))
                                                {
                                                    <span><i class="fas fa-engine me-1"></i>@car.EngineCapacity</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <h4 class="text-success fw-bold mb-3">@car.FormattedPrice</h4>
                                            <div class="d-flex gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", new { id = car.CarId })" 
                                                   class="btn btn-primary">View Details</a>
                                                @if (car.IsAvailable && car.StockQuantity > 0)
                                                {
                                                    <button type="button" class="btn btn-outline-success" 
                                                            onclick="addToCart(@car.CarId)">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- No Cars in Category -->
                <div class="no-cars text-center py-5">
                    <i class="fas fa-car fa-4x text-muted mb-4"></i>
                    <h3 class="text-muted mb-3">No @Model.CategoryName Found</h3>
                    <p class="text-muted mb-4">
                        We don't have any @Model.CategoryName.ToLower() available right now. 
                        Please check back later or explore other categories.
                    </p>
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="@Url.Action("Index", "Cars")" class="btn btn-primary">
                            <i class="fas fa-car me-2"></i>Browse All Cars
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            }
            
            <!-- Pagination -->
            @if (Model.Pagination != null && Model.Pagination.TotalPages > 1)
            {
                <nav aria-label="Category cars pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.Pagination.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.Pagination.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); 
                              i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); 
                              i++)
                        {
                            <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }
                        
                        @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.Pagination.CurrentPage + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@functions {
    public string GetCategoryIcon(string categoryName)
    {
        return categoryName.ToLower() switch
        {
            "sedan" => "car",
            "suv" => "truck",
            "hatchback" => "car-side",
            "coupe" => "car",
            "convertible" => "car",
            "truck" => "truck-pickup",
            "van" => "van-shuttle",
            _ => "car"
        };
    }
    
    public string GetCategoryDescription(string categoryName)
    {
        return categoryName.ToLower() switch
        {
            "sedan" => "Comfortable four-door vehicles perfect for families and daily commuting",
            "suv" => "Spacious and versatile sport utility vehicles for any adventure", 
            "hatchback" => "Compact and efficient cars ideal for city driving",
            "coupe" => "Stylish two-door vehicles that combine performance with elegance",
            "convertible" => "Open-top vehicles for the ultimate driving experience",
            "truck" => "Powerful pickup trucks for work and recreation",
            "van" => "Spacious vans for families and commercial use",
            _ => "Quality vehicles for every need and lifestyle"
        };
    }
}

<style>
    .category-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    }
    
    .feature-card {
        background: #f8f9fa;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }
    
    .car-card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .car-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .car-card:hover .car-actions {
        display: block !important;
    }
    
    .car-image {
        height: 200px;
        object-fit: cover;
        border-radius: 15px 15px 0 0;
    }
    
    .filter-section {
        transition: background-color 0.3s ease;
    }
    
    .filter-section:hover {
        background-color: #f8f9fa;
    }
    
    .btn-check:checked + .btn {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
    }
    
    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .car-list-item img {
        max-width: 150px;
    }
    
    .pagination .page-link {
