@using ABCCarTraders.Controllers
@model ContactViewModel
@{
    ViewData["Title"] = "Contact Us - ABC Car Traders";
}

<!-- Page Header -->
<section class="page-header bg-primary text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold">Contact Us</h1>
                <p class="lead">Get in touch with our expert team</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form & Info Section -->
<section class="contact-section py-5">
    <div class="container">
        <div class="row">
            <!-- Contact Form -->
            <div class="col-lg-8 mb-5">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-envelope me-2"></i>Send us a Message</h4>
                    </div>
                    <div class="card-body p-4">
                        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Contact" method="post" novalidate>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Name" class="form-label fw-semibold">Full Name <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter your full name">
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">Email Address <span class="text-danger">*</span></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter your email address">
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Subject" class="form-label fw-semibold">Subject</label>
                                <input asp-for="Subject" class="form-control" placeholder="Enter the subject of your message">
                                <span asp-validation-for="Subject" class="text-danger small"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Message" class="form-label fw-semibold">Message <span class="text-danger">*</span></label>
                                <textarea asp-for="Message" class="form-control" rows="6" placeholder="Enter your message here..."></textarea>
                                <span asp-validation-for="Message" class="text-danger small"></span>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Send Message
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Contact Information</h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="contact-info">
                            <!-- Company Name -->
                            <div class="mb-4">
                                <h5 class="fw-bold text-primary">@Model.CompanyInfo.Name</h5>
                                <p class="text-muted small">Your trusted automotive partner</p>
                            </div>

                            <!-- Address -->
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-semibold mb-1">Address</h6>
                                    <p class="text-muted small mb-0">@Model.CompanyInfo.Address</p>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-phone text-success fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-semibold mb-1">Phone</h6>
                                    <p class="text-muted small mb-0">
                                        <a href="tel:@Model.CompanyInfo.Phone.Replace(" ", "")" class="text-decoration-none">@Model.CompanyInfo.Phone</a>
                                    </p>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-envelope text-warning fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-semibold mb-1">Email</h6>
                                    <p class="text-muted small mb-0">
                                        <a href="mailto:@Model.CompanyInfo.Email" class="text-decoration-none">@Model.CompanyInfo.Email</a>
                                    </p>
                                </div>
                            </div>

                            <!-- Working Hours -->
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-clock text-info fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-semibold mb-1">Working Hours</h6>
                                    <p class="text-muted small mb-0">@Model.CompanyInfo.WorkingHours</p>
                                    <p class="text-muted small mb-0">Sunday: Closed</p>
                                </div>
                            </div>

                            <!-- Emergency Contact -->
                            <div class="d-flex mb-4">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-phone-alt text-danger fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-semibold mb-1">Emergency Contact</h6>
                                    <p class="text-muted small mb-0">
                                        <a href="tel:@Model.CompanyInfo.EmergencyContact.Replace(" ", "")" class="text-decoration-none">@Model.CompanyInfo.EmergencyContact</a>
                                    </p>
                                </div>
                            </div>

                            <!-- Social Media -->
                            <div class="border-top pt-3">
                                <h6 class="fw-semibold mb-3">Follow Us</h6>
                                <div class="d-flex gap-2">
                                    <a href="#" class="btn btn-outline-primary btn-sm">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                    <a href="#" class="btn btn-outline-info btn-sm">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                    <a href="#" class="btn btn-outline-danger btn-sm">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                    <a href="#" class="btn btn-outline-primary btn-sm">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

