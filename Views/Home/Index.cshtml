@using ABCCarTraders.Controllers
@model HomeViewModel
@{
    ViewData["Title"] = "ABC Car Traders - Quality Cars & Parts";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Find Your Perfect Car</h1>
                <p class="lead mb-4">Discover quality vehicles and genuine car parts at ABC Car Traders. Your trusted partner for all automotive needs.</p>
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Index", "Cars")" class="btn btn-warning btn-lg">Browse Cars</a>
                    <a href="@Url.Action("Index", "CarParts")" class="btn btn-outline-light btn-lg">Shop Parts</a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1605559424843-9e4c228bf1c2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2000&q=80" alt="Quality Cars" class="img-fluid rounded shadow"
                     onerror="this.src='/images/placeholder-car.jpg'">
            </div>
        </div>
    </div>
</section>

<!-- Search Section -->
<section class="search-section py-4 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Quick Search</h5>
                        <form asp-action="Search" method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="searchTerm" class="form-control form-control-lg" 
                                       placeholder="Search cars, parts, brands..." required>
                            </div>
                            <div class="col-md-4">
                                <select name="category" class="form-select form-select-lg">
                                    <option value="all">All Categories</option>
                                    <option value="cars">Cars</option>
                                    <option value="parts">Car Parts</option>
                                </select>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-search me-2"></i>Search
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="stats-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-car fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold text-primary">@Model.TotalCars</h3>
                        <p class="text-muted">Quality Cars Available</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-cog fa-3x text-success mb-3"></i>
                        <h3 class="fw-bold text-success">@Model.TotalCarParts</h3>
                        <p class="text-muted">Genuine Car Parts</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-warning mb-3"></i>
                        <h3 class="fw-bold text-warning">1000+</h3>
                        <p class="text-muted">Happy Customers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-award fa-3x text-info mb-3"></i>
                        <h3 class="fw-bold text-info">15+</h3>
                        <p class="text-muted">Years Experience</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Cars Section -->
<section class="featured-cars py-5 bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="fw-bold mb-2">Featured Cars</h2>
                <p class="lead text-muted">Discover our handpicked selection of quality vehicles</p>
            </div>
        </div>
        <div class="row">
            @foreach (var car in Model.FeaturedCars)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm car-card">
                        <div class="position-relative">
                            <img src="@(car.ImageUrl ?? "/images/placeholder-car.jpg")" 
                                 class="card-img-top" alt="@car.Model" style="height: 200px; object-fit: cover;">
                            <span class="badge bg-primary position-absolute top-0 end-0 m-2">@car.Year</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@car.Brand?.BrandName @car.Model</h5>
                            <p class="card-text text-muted small">@car.Description?.Substring(0, Math.Min(100, @car.Description?.Length ?? 0))...</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-secondary">@car.FuelType</span>
                                <span class="badge bg-info">@car.Transmission</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="text-primary mb-0">@car.Price.ToString("C")</h5>
                                @if (car.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                <a href="@Url.Action("Details", "Cars", new { id = car.CarId })" 
                                   class="btn btn-outline-primary flex-fill">View Details</a>
                                @if (Model.IsUserLoggedIn && car.StockQuantity > 0)
                                {
                                    <button type="button" class="btn btn-primary flex-fill add-to-cart-btn" 
                                            data-item-id="@car.CarId" data-item-type="car">
                                        <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href="@Url.Action("Index", "Cars")" class="btn btn-primary btn-lg">View All Cars</a>
            </div>
        </div>
    </div>
</section>

<!-- Featured Car Parts Section -->
<section class="featured-parts py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="fw-bold mb-2">Popular Car Parts</h2>
                <p class="lead text-muted">Genuine parts for all your automotive needs</p>
            </div>
        </div>
        <div class="row">
            @foreach (var part in Model.FeaturedCarParts)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm part-card">
                        <div class="position-relative">
                            <img src="@(part.ImageUrl ?? "/images/placeholder-part.jpg")" 
                                 class="card-img-top" alt="@part.PartName" style="height: 150px; object-fit: cover;">
                            @if (part.StockQuantity <= 10 && part.StockQuantity > 0)
                            {
                                <span class="badge bg-warning position-absolute top-0 start-0 m-2">Low Stock</span>
                            }
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">@part.PartName</h6>
                            <p class="text-muted small mb-1">@part.Brand?.BrandName</p>
                            <p class="text-muted small">Part #: @part.PartNumber</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="text-primary mb-0">@part.Price.ToString("C")</h6>
                                @if (part.StockQuantity > 0)
                                {
                                    <span class="badge bg-success small">@part.StockQuantity in stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger small">Out of Stock</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                <a href="@Url.Action("Details", "CarParts", new { id = part.CarPartId })" 
                                   class="btn btn-outline-success btn-sm flex-fill">Details</a>
                                @if (Model.IsUserLoggedIn && part.StockQuantity > 0)
                                {
                                    <button type="button" class="btn btn-success btn-sm flex-fill add-to-cart-btn" 
                                            data-item-id="@part.CarPartId" data-item-type="carpart">
                                        <i class="fas fa-cart-plus me-1"></i>Add
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a href="@Url.Action("Index", "CarParts")" class="btn btn-success btn-lg">View All Parts</a>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
