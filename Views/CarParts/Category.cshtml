@model ABCCarTraders.Models.ViewModels.CarPartCategoryViewModel
@{
    ViewData["Title"] = $"{Model.CategoryName} Parts";
    ViewData["CategoryName"] = Model.CategoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
@await Html.PartialAsync("_BreadcrumbNavigation")

<!-- Category Header -->
<div class="category-header bg-gradient-success text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="fas fa-@GetCategoryIcon(Model.CategoryName) me-3"></i>@Model.CategoryName Parts
                </h1>
                <p class="lead mb-0">@GetCategoryDescription(Model.CategoryName)</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="category-stats text-white">
                    <div class="mb-2">
                        <div class="h3 fw-bold mb-0">@Model.TotalPartsInCategory</div>
                        <div>@Model.CategoryName.ToLower() available</div>
                    </div>
                    <div class="small">
                        <i class="fas fa-certificate me-1"></i>
                        Genuine quality parts
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Category Features -->
<div class="container mb-5">
    <div class="category-features">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-certificate fa-2x text-warning"></i>
                    </div>
                    <h6 class="fw-bold">Genuine Parts</h6>
                    <p class="text-muted small mb-0">OEM quality guaranteed</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shipping-fast fa-2x text-primary"></i>
                    </div>
                    <h6 class="fw-bold">Fast Shipping</h6>
                    <p class="text-muted small mb-0">Quick delivery nationwide</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-tools fa-2x text-info"></i>
                    </div>
                    <h6 class="fw-bold">Expert Support</h6>
                    <p class="text-muted small mb-0">Technical assistance available</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fa-2x text-success"></i>
                    </div>
                    <h6 class="fw-bold">Warranty</h6>
                    <p class="text-muted small mb-0">Quality warranty included</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters and Content -->
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="filters-sidebar">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-filter me-2"></i>Filter @Model.CategoryName
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <form asp-action="Category" asp-route-id="@Model.CategoryId" method="get" id="categoryFilterForm">
                            
                            <!-- Part Number Search -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-barcode me-2 text-primary"></i>Part Number
                                </label>
                                <input type="text" name="partNumber" class="form-control form-control-sm" 
                                       placeholder="Enter part number..." value="@ViewData["PartNumber"]" />
                            </div>
                            
                            <!-- Price Range -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-dollar-sign me-2 text-warning"></i>Price Range
                                </label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <input type="number" name="minPrice" class="form-control form-control-sm" 
                                               placeholder="Min" value="@ViewData["MinPrice"]" />
                                    </div>
                                    <div class="col-6">
                                        <input type="number" name="maxPrice" class="form-control form-control-sm" 
                                               placeholder="Max" value="@ViewData["MaxPrice"]" />
                                    </div>
                                </div>
                                <div class="price-slider mt-3">
                                    <div class="range-labels d-flex justify-content-between small text-muted">
                                        <span>$5</span>
                                        <span>$500+</span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Brand -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-star me-2 text-info"></i>Brand
                                </label>
                                <div class="brand-checkboxes">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="bosch" id="bosch">
                                        <label class="form-check-label" for="bosch">Bosch</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="denso" id="denso">
                                        <label class="form-check-label" for="denso">Denso</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="mann" id="mann">
                                        <label class="form-check-label" for="mann">Mann Filter</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="ngk" id="ngk">
                                        <label class="form-check-label" for="ngk">NGK</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="brands" value="mobil1" id="mobil1">
                                        <label class="form-check-label" for="mobil1">Mobil 1</label>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Vehicle Compatibility -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-car me-2 text-secondary"></i>Vehicle Compatibility
                                </label>
                                <input type="text" name="compatibility" class="form-control form-control-sm" 
                                       placeholder="e.g., Toyota Camry 2020" value="@ViewData["Compatibility"]" />
                                <div class="form-text small">Enter make, model, year</div>
                            </div>
                            
                            <!-- Stock Status -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-boxes me-2 text-danger"></i>Availability
                                </label>
                                <div class="stock-options">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="stock" value="all" id="stockAll" checked>
                                        <label class="form-check-label" for="stockAll">All Items</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="stock" value="instock" id="stockInStock">
                                        <label class="form-check-label" for="stockInStock">In Stock Only</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="stock" value="lowstock" id="stockLowStock">
                                        <label class="form-check-label" for="stockLowStock">Low Stock (Hurry!)</label>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Part Condition -->
                            <div class="filter-section p-3 border-bottom">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-certificate me-2 text-warning"></i>Condition
                                </label>
                                <div class="condition-buttons">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="condition" value="new" id="conditionNew" checked>
                                            <label class="btn btn-outline-success btn-sm w-100" for="conditionNew">New</label>
                                        </div>
                                        <div class="col-6">
                                            <input type="radio" class="btn-check" name="condition" value="oem" id="conditionOEM">
                                            <label class="btn btn-outline-primary btn-sm w-100" for="conditionOEM">OEM</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Filter Actions -->
                            <div class="filter-actions p-3">
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="fas fa-search me-2"></i>Apply Filters
                                </button>
                                <a href="@Url.Action("Category", new { id = Model.CategoryId })" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-refresh me-2"></i>Clear Filters
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <!-- Results Header -->
            <div class="results-header mb-4">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div class="results-info mb-2">
                        <h4 class="mb-0">
                            @Model.CarParts.Count of @Model.TotalPartsInCategory @Model.CategoryName.ToLower() parts
                        </h4>
                        <p class="text-muted mb-0">High-quality parts for your vehicle</p>
                    </div>
                    
                    <div class="d-flex gap-2 align-items-center mb-2">
                        <!-- View Toggle -->
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary btn-sm active" 
                                    onclick="toggleView('grid')" id="gridViewBtn">
                                <i class="fas fa-th"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" 
                                    onclick="toggleView('list')" id="listViewBtn">
                                <i class="fas fa-list"></i>
                            </button>
                        </div>
                        
                        <!-- Sort Options -->
                        <select class="form-select form-select-sm" style="width: auto;" onchange="sortParts(this.value)">
                            <option value="">Sort By</option>
                            <option value="price_asc">Price: Low to High</option>
                            <option value="price_desc">Price: High to Low</option>
                            <option value="name_asc">Name: A to Z</option>
                            <option value="brand_asc">Brand: A to Z</option>
                            <option value="stock_desc">Stock: High to Low</option>
                            <option value="newest">Newest First</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Parts Grid -->
            @if (Model.CarParts?.Any() == true)
            {
                <div id="partsContainer">
                    <div class="parts-grid" id="gridContainer">
                        <div class="row g-4">
                            @foreach (var part in Model.CarParts)
                            {
                                <div class="col-xl-4 col-lg-6">
                                    <div class="part-card card h-100 border-0 shadow-sm">
                                        <div class="position-relative">
                                            <img src="@(part.ImageUrl ?? "/images/placeholder-part.jpg")" 
                                                 class="card-img-top part-image" alt="@part.PartName">
                                            
                                            <!-- Part Number Badge -->
                                            <span class="badge bg-primary position-absolute top-0 start-0 m-2">
                                                #@part.PartNumber
                                            </span>
                                            
                                            <!-- Stock Status -->
                                            @if (part.StockQuantity == 0)
                                            {
                                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                                    Out of Stock
                                                </span>
                                            }
                                            else if (part.StockQuantity <= 10)
                                            {
                                                <span class="badge bg-warning position-absolute top-0 end-0 m-2">
                                                    Low Stock (@part.StockQuantity)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success position-absolute top-0 end-0 m-2">
                                                    In Stock
                                                </span>
                                            }
                                            
                                            <!-- Quick Actions -->
                                            <div class="part-actions position-absolute bottom-0 end-0 m-2 d-none">
                                                <div class="btn-group-vertical" role="group">
                                                    <button type="button" class="btn btn-light btn-sm" 
                                                            onclick="addToWishlist(@part.CarPartId)" title="Add to Wishlist">
                                                        <i class="fas fa-heart"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-light btn-sm" 
                                                            onclick="addToCompare(@part.CarPartId)" title="Compare">
                                                        <i class="fas fa-balance-scale"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="card-body">
                                            <div class="part-header mb-2">
                                                <h5 class="card-title mb-1">@part.PartName</h5>
                                                <div class="part-meta">
                                                    <span class="badge bg-light text-dark me-1">@part.BrandName</span>
                                                    <span class="badge bg-secondary">@part.CategoryName</span>
                                                </div>
                                            </div>
                                            
                                            <div class="part-details mb-3">
                                                <div class="small text-muted">
                                                    <div class="mb-1">
                                                        <i class="fas fa-barcode me-1"></i>
                                                        Part #: <strong>@part.PartNumber</strong>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(part.Compatibility))
                                                    {
                                                        <div class="mb-1">
                                                            <i class="fas fa-car me-1"></i>
                                                            Compatible: @(part.Compatibility.Length > 30 ? part.Compatibility.Substring(0, 30) + "..." : part.Compatibility)
                                                        </div>
                                                    }
                                                    <div>
                                                        <i class="fas fa-boxes me-1"></i>
                                                        Stock: @part.StockQuantity units
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="part-price mb-3">
                                                <h4 class="text-success fw-bold mb-0">@part.FormattedPrice</h4>
                                            </div>
                                            
                                            <div class="part-actions">
                                                <div class="row g-2">
                                                    <div class="col-8">
                                                        <a href="@Url.Action("Details", new { id = part.CarPartId })" 
                                                           class="btn btn-success w-100">
                                                            <i class="fas fa-eye me-1"></i>View Details
                                                        </a>
                                                    </div>
                                                    <div class="col-4">
                                                        @if (part.IsAvailable && part.StockQuantity > 0)
                                                        {
                                                            <button type="button" class="btn btn-outline-primary w-100" 
                                                                    onclick="addToCart(@part.CarPartId)" title="Add to Cart">
                                                                <i class="fas fa-cart-plus"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-secondary w-100" disabled>
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- List View (Hidden by default) -->
                    <div class="parts-list d-none" id="listContainer">
                        @foreach (var part in Model.CarParts)
                        {
                            <div class="part-list-item card mb-3 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <img src="@(part.ImageUrl ?? "/images/placeholder-part.jpg")" 
                                                 class="img-fluid rounded" alt="@part.PartName"
                                                 style="height: 120px; object-fit: cover;">
                                        </div>
                                        <div class="col-md-6">
                                            <h5 class="fw-bold">@part.PartName</h5>
                                            <div class="part-specs mb-2">
                                                <span class="badge bg-primary me-1">#@part.PartNumber</span>
                                                <span class="badge bg-light text-dark me-1">@part.BrandName</span>
                                                <span class="badge bg-secondary">@part.CategoryName</span>
                                            </div>
                                            <div class="part-features text-muted small">
                                                @if (!string.IsNullOrEmpty(part.Compatibility))
                                                {
                                                    <div class="mb-1">
                                                        <i class="fas fa-car me-1"></i>
                                                        Compatible: @part.Compatibility
                                                    </div>
                                                }
                                                <div>
                                                    <i class="fas fa-boxes me-1"></i>
                                                    Stock: @part.StockQuantity units
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <h4 class="text-success fw-bold mb-3">@part.FormattedPrice</h4>
                                            <div class="d-flex gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", new { id = part.CarPartId })" 
                                                   class="btn btn-success">View Details</a>
                                                @if (part.IsAvailable && part.StockQuantity > 0)
                                                {
                                                    <button type="button" class="btn btn-outline-primary" 
                                                            onclick="addToCart(@part.CarPartId)">
                                                        <i class="fas fa-cart-plus"></i>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- No Parts in Category -->
                <div class="no-parts text-center py-5">
                    <i class="fas fa-cogs fa-4x text-muted mb-4"></i>
                    <h3 class="text-muted mb-3">No @Model.CategoryName Parts Found</h3>
                    <p class="text-muted mb-4">
                        We don't have any @Model.CategoryName.ToLower() parts available right now. 
                        Please check back later or explore other categories.
                    </p>
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="@Url.Action("Index", "CarParts")" class="btn btn-success">
                            <i class="fas fa-cogs me-2"></i>Browse All Parts
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            }
            
            <!-- Pagination -->
            @if (Model.Pagination != null && Model.Pagination.TotalPages > 1)
            {
                <nav aria-label="Category parts pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.Pagination.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.Pagination.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); 
                              i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); 
                              i++)
                        {
                            <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }
                        
                        @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.Pagination.CurrentPage + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@functions {
    public string GetCategoryIcon(string categoryName)
    {
        return categoryName.ToLower() switch
        {
            "engine parts" => "cog",
            "brake parts" => "circle",
            "suspension" => "car-side",
            "electrical" => "bolt",
            "filters" => "filter",
            "oils & fluids" => "tint",
            "exhaust" => "wind",
            "cooling" => "snowflake",
            "transmission" => "cogs",
            "body parts" => "car",
            _ => "cogs"
        };
    }
    
    public string GetCategoryDescription(string categoryName)
    {
        return categoryName.ToLower() switch
        {
            "engine parts" => "Essential components to keep your engine running smoothly",
            "brake parts" => "High-quality brake components for safe and reliable stopping power", 
            "suspension" => "Suspension parts for improved ride comfort and handling",
            "electrical" => "Electrical components and accessories for your vehicle",
            "filters" => "Air, oil, and fuel filters to keep your vehicle clean and efficient",
            "oils & fluids" => "Premium lubricants and fluids for optimal performance",
            "exhaust" => "Exhaust system components for better performance and emissions",
            "cooling" => "Cooling system parts to prevent overheating",
            "transmission" => "Transmission components for smooth gear changes",
            "body parts" => "Exterior and interior body parts and accessories",
            _ => "Quality automotive parts for your vehicle"
        };
    }
}

<style>
    .category-header {
        background: linear-gradient(135deg, #198754 0%, #146c43 100%);
    }
    
    .feature-card {
        background: #f8f9fa;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }
    
    .part-card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .part-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .part-card:hover .part-actions {
        display: block !important;
    }
    
    .part-image {
        height: 200px;
        object-fit: cover;
        border-radius: 15px 15px 0 0;
    }
    
    .filter-section {
        transition: background-color 0.3s ease;
    }
    
    .filter-section:hover {
        background-color: #f8f9fa;
    }
    
    .btn-check:checked + .btn {
        background-color: #198754;
        border-color: #198754;
        color: white;
    }
    
    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .part-list-item img {
        max-width: 150px;
    }
    
    .pagination .page-link {
        border-radius: 8px;
        margin: 0 2px;
        border: 1px solid #dee2e6;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #198754;
