        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .installation-option:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
        }

    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    @@media (max-width: 768px) {
        .part-actions .btn-group {
            flex-direction: column;
        }

        .add-to-cart-section .row {
            text-align: center;
        }
    }
</style>

<script>
    function addToCart(partId = @Model.CarPart.CarPartId) {
        const quantity = document.getElementById('quantity')?.value || 1;

        fetch('@Url.Action("AddToCart", "Order")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
            },
            body: JSON.stringify({
                itemId: partId,
                itemType: 'CarPart',
                quantity: parseInt(quantity)
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Part added to cart successfully!');
                updateCartCount();
            } else {
                alert('Error adding part to cart: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while adding the part to cart.');
        });
    }

    function addToWishlist(partId) {
        alert('Wishlist functionality coming soon!');
    }

    function addToCompare(partId) {
        let compareList = JSON.parse(localStorage.getItem('partCompare') || '[]');
        if (compareList.length >= 4) {
            alert('You can compare maximum 4 parts at a time.');
            return;
        }

        if (compareList.includes(partId)) {
            alert('This part is already in your comparison list.');
            return;
        }

        compareList.push(partId);
        localStorage.setItem('partCompare', JSON.stringify(compareList));
        alert('Part added to comparison list!');
    }

    function sharePart() {
        if (navigator.share) {
            navigator.share({
                title: '@Model.CarPart.BrandName @Model.CarPart.PartName',
                text: 'Check out this @Model.CarPart.PartName for LKR @Model.CarPart.Price.ToString("N2")',
                url: window.location.href
            });
        } else {
            navigator.clipboard.writeText(window.location.href).then(() => {
                alert('Part link copied to clipboard!');
            });
        }
    }

