        document.getElementById('installation-tab').click();
    }

    function findInstaller() {
        alert('Installer finder feature coming soon! Please contact us for recommended installers in your area.');
    }

    function downloadGuide() {
        alert('Installation guide download coming soon!');
    }

    function updateCartCount() {
        fetch('@Url.Action("GetCartCount", "Order")')
            .then(response => response.json())
            .then(data => {
                const cartBadges = document.querySelectorAll('.cart-count');
                cartBadges.forEach(badge => {
                    badge.textContent = data.count;
                    badge.style.display = data.count > 0 ? 'inline' : 'none';
                });
            });
    }
