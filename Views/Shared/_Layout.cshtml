<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Car Traders</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Meta Tags for SEO -->
    <meta name="description" content="ABC Car Traders - Quality cars and genuine car parts in Sri Lanka. Find your perfect vehicle or automotive parts with trusted service since 2020.">
    <meta name="keywords" content="cars, car parts, vehicles, automotive, Sri Lanka, ABC Car Traders, quality cars, genuine parts">
    <meta name="author" content="ABC Car Traders (Pvt) Ltd">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="@ViewData["Title"] - ABC Car Traders">
    <meta property="og:description" content="Quality cars and genuine car parts in Sri Lanka">
    <meta property="og:type" content="website">
    <meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path">
    <meta property="og:image" content="@Context.Request.Scheme://@Context.Request.Host/images/logo.png">
</head>
<body>
    <!-- Navigation Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
            <div class="container">
                <!-- Brand Logo -->
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-car me-2 text-warning"></i>ABC Car Traders
                </a>
                
                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cars" ? "active" : "")" href="#" id="carsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-car me-1"></i>Cars
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Cars")">
                                    <i class="fas fa-list me-2"></i>All Cars
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Cars", new { id = 1 })">
                                    <i class="fas fa-car me-2"></i>Sedans
                                </a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Cars", new { id = 2 })">
                                    <i class="fas fa-truck me-2"></i>SUVs
                                </a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "Cars", new { id = 3 })">
                                    <i class="fas fa-car-side me-2"></i>Hatchbacks
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Popular Brands</h6></li>
                                <li><a class="dropdown-item" href="@Url.Action("Brand", "Cars", new { brand = "Toyota" })">Toyota</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Brand", "Cars", new { brand = "Honda" })">Honda</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Brand", "Cars", new { brand = "BMW" })">BMW</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "CarParts" ? "active" : "")" href="#" id="partsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cogs me-1"></i>Car Parts
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "CarParts")">
                                    <i class="fas fa-list me-2"></i>All Parts
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "CarParts", new { id = 5 })">
                                    <i class="fas fa-cog me-2"></i>Engine Parts
                                </a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "CarParts", new { id = 6 })">
                                    <i class="fas fa-stop-circle me-2"></i>Brake Parts
                                </a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "CarParts", new { id = 7 })">
                                    <i class="fas fa-bolt me-2"></i>Electrical Parts
                                </a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Category", "CarParts", new { id = 8 })">
                                    <i class="fas fa-car-crash me-2"></i>Body Parts
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")" href="@Url.Action("About", "Home")">
                                <i class="fas fa-info-circle me-1"></i>About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "active" : "")" href="@Url.Action("Contact", "Home")">
                                <i class="fas fa-envelope me-1"></i>Contact
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Search Form -->
                    <form class="d-flex me-3" asp-action="Search" asp-controller="Home" method="get">
                        <div class="input-group">
                            <input class="form-control form-control-sm" type="search" name="searchTerm" placeholder="Search cars, parts..." aria-label="Search">
                            <button class="btn btn-outline-light btn-sm" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                    
                    <!-- Login Partial -->
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" style="margin-top: 76px; min-height: calc(100vh - 76px);">
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <!-- Page Content -->
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-car me-2 text-warning"></i>ABC Car Traders
                    </h5>
                    <p class="text-light mb-3">Your trusted partner for quality vehicles and genuine car parts since 2020. We provide excellent service with a commitment to customer satisfaction.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light fs-5"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light fs-5"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light fs-5"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light fs-5"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-light text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Cars")" class="text-light text-decoration-none">Cars</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "CarParts")" class="text-light text-decoration-none">Parts</a></li>
                        <li class="mb-2"><a href="@Url.Action("About", "Home")" class="text-light text-decoration-none">About Us</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")" class="text-light text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                
                <!-- Services -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Services</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><span class="text-light">Car Sales</span></li>
                        <li class="mb-2"><span class="text-light">Parts Supply</span></li>
                        <li class="mb-2"><span class="text-light">Maintenance</span></li>
                        <li class="mb-2"><span class="text-light">Consultation</span></li>
                        <li class="mb-2"><span class="text-light">Delivery</span></li>
                    </ul>
                </div>
                
                <!-- Contact Info -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h6 class="fw-bold mb-3">Contact Information</h6>
                    <div class="d-flex mb-2">
                        <i class="fas fa-map-marker-alt me-3 mt-1 text-warning"></i>
                        <span>123 Main Street<br>Colombo 01, Sri Lanka</span>
                    </div>
                    <div class="d-flex mb-2">
                        <i class="fas fa-phone me-3 mt-1 text-warning"></i>
                        <span>+94 11 234 5678</span>
                    </div>
                    <div class="d-flex mb-2">
                        <i class="fas fa-envelope me-3 mt-1 text-warning"></i>
                        <span>info@abccartraders.com</span>
                    </div>
                    <div class="d-flex">
                        <i class="fas fa-clock me-3 mt-1 text-warning"></i>
                        <span>Mon - Sat: 8:00 AM - 6:00 PM</span>
                    </div>
                </div>
            </div>
            
            <hr class="my-4">
            
            <!-- Copyright -->
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; @DateTime.Now.Year ABC Car Traders (Pvt) Ltd. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="@Url.Action("Privacy", "Home")" class="text-light text-decoration-none me-3">Privacy Policy</a>
                    <a href="@Url.Action("Terms", "Home")" class="text-light text-decoration-none">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>