@model ABCCarTraders.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!-- Page Header -->
<div class="dashboard-header bg-gradient-primary text-white py-4 mb-4 rounded">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-tachometer-alt me-3"></i>Welcome Back, @Model.UserName!
                </h1>
                <p class="lead mb-0">
                    <i class="fas fa-clock me-2"></i>Last login: @Model.LastLoginDate.ToString("MMM dd, yyyy 'at' hh:mm tt")
                </p>
            </div>
            <div class="col-md-4 text-end">
                <div class="quick-stats">
                    <span class="badge bg-light text-dark fs-6 me-2">
                        <i class="fas fa-calendar-check me-1"></i>Member since @Model.CustomerData?.MemberSince.ToString("MMM yyyy")
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="card stat-card bg-primary text-white border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="stat-icon bg-white bg-opacity-20 rounded-circle p-3">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="stat-number h3 fw-bold mb-0">@Model.CustomerData?.TotalOrders</div>
                    <div class="stat-label">Total Orders</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="card stat-card bg-success text-white border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="stat-icon bg-white bg-opacity-20 rounded-circle p-3">
                        <i class="fas fa-credit-card fa-2x"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="stat-number h3 fw-bold mb-0">LKR @Model.CustomerData?.TotalSpent.ToString("N2")</div>
                    <div class="stat-label">Total Spent</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="card stat-card bg-warning text-white border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="stat-icon bg-white bg-opacity-20 rounded-circle p-3">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="stat-number h3 fw-bold mb-0">@(Model.CustomerData?.PendingOrders ?? 0)</div>
                    <div class="stat-label">Pending Orders</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="card stat-card bg-info text-white border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="stat-icon bg-white bg-opacity-20 rounded-circle p-3">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="stat-number h3 fw-bold mb-0">@(Model.CustomerData?.CartItemsCount ?? 0)</div>
                    <div class="stat-label">Cart Items</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="row g-4">
    <!-- Recent Orders -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-bottom-0 pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title fw-bold mb-0">
                        <i class="fas fa-history me-2 text-primary"></i>Recent Orders
                    </h5>
                    <a href="@Url.Action("MyOrders", "Customer")" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-eye me-1"></i>View All
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.CustomerData?.RecentOrders?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Date</th>
                                    <th>Items</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.CustomerData.RecentOrders.Take(5))
                                {
                                    <tr>
                                        <td class="fw-bold text-primary">#@order.OrderNumber</td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge bg-light text-dark">@order.OrderItems.Count items</span>
                                        </td>
                                        <td class="fw-bold">LKR @order.TotalAmount.ToString("N2")</td>
                                        <td>
                                            <span class="badge bg-@(order.OrderStatus.ToString().ToLower() == "delivered" ? "success" :
                                                                                                                                                    order.OrderStatus.ToString().ToLower() == "pending" ? "warning" : "primary")">
                                        @order.OrderStatus
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("OrderDetails", "Customer", new { id = order.OrderId })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No orders yet</h6>
                        <p class="text-muted">Start shopping to see your orders here!</p>
                        <a href="@Url.Action("Index", "Cars")" class="btn btn-primary">
                            <i class="fas fa-car me-2"></i>Browse Cars
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Profile & Quick Actions -->
    <div class="col-lg-4">
        <!-- Profile Status -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-transparent border-bottom-0 pb-0">
                <h5 class="card-title fw-bold mb-0">
                    <i class="fas fa-user-circle me-2 text-success"></i>Profile Status
                </h5>
            </div>
            <div class="card-body">
                @if (Model.CustomerData?.IsProfileComplete == true)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>Your profile is complete!
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Complete your profile to get better recommendations.
                        @if (Model.CustomerData?.MissingProfileFields?.Any() == true)
                        {
                            <ul class="mt-2 mb-0 small">
                                @foreach (var field in Model.CustomerData.MissingProfileFields)
                                {
                                    <li>@field</li>
                                }
                            </ul>
                        }
                    </div>
                    <a href="@Url.Action("Profile", "Customer")" class="btn btn-warning btn-sm">
                        <i class="fas fa-user-edit me-1"></i>Complete Profile
                    </a>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom-0 pb-0">
                <h5 class="card-title fw-bold mb-0">
                    <i class="fas fa-bolt me-2 text-warning"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Index", "Cars")" class="btn btn-outline-primary">
                        <i class="fas fa-car me-2"></i>Browse Cars
                    </a>
                    <a href="@Url.Action("Index", "CarParts")" class="btn btn-outline-success">
                        <i class="fas fa-cogs me-2"></i>Shop Car Parts
                    </a>
                    <a href="@Url.Action("Cart", "Order")" class="btn btn-outline-warning">
                        <i class="fas fa-shopping-cart me-2"></i>View Cart
                        @if (Model.CustomerData?.CartItemsCount > 0)
                        {
                            <span class="badge bg-warning text-dark ms-1">@Model.CustomerData?.CartItemsCount</span>
                        }
                    </a>
                    <a href="@Url.Action("MyOrders", "Customer")" class="btn btn-outline-info">
                        <i class="fas fa-list me-2"></i>My Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Notifications -->
@if (Model.Notifications?.Any() == true)
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-bottom-0 pb-0">
                    <h5 class="card-title fw-bold mb-0">
                        <i class="fas fa-bell me-2 text-info"></i>Notifications
                    </h5>
                </div>
                <div class="card-body">
                    @foreach (var notification in Model.Notifications.Take(3))
                    {
                        <div class="alert alert-@notification.Type.ToLower() alert-dismissible fade show">
                            <i class="fas fa-info-circle me-2"></i>
                            @notification.Message
                            @if (!string.IsNullOrEmpty(notification.ActionUrl) && !string.IsNullOrEmpty(notification.ActionText))
                            {
                                <a href="@notification.ActionUrl" class="btn btn-sm btn-outline-@notification.Type.ToLower() ms-2">
                                    @notification.ActionText
                                </a>
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
        border-radius: 15px;
    }

    .stat-card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .stat-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 15px;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table td, .table th {
        padding: 1rem 0.75rem;
        border-top: 1px solid #dee2e6;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-size: 0.75em;
        border-radius: 6px;
    }

    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
        }
</style>